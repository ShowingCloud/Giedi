<div class="container">
  <div id="forget-page" class="page">
    <div class="logo">
      <img src="<%= image_path('logo-orange.png') %>" alt=""/>
    </div>
    <div class="title">
      重置密码
    </div>
    <div class="like-tabs">
      <div class="active">
        邮箱重置
      </div>
      <div class="disabled">
        <%= link_to "手机重置", password_resets_by_phone_path %>
      </div>
    </div>
    <div class="form">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          <div class="row">
            <%= f.label :email, "邮箱" %>
            <%= f.email_field :email %>
          </div>
          <div class="row">
            <%= f.submit "提交", class: "button btn-dome" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="bk"></div>
