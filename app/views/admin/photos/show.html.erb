<h1 class="page-header">
  显示课件
  <small class="pull-right">
    <a href="<%= edit_admin_photo_path(@photo) %>" title="编辑" class="btn btn-default">
      <i class="icon-edit icon-only"></i></a>
    <a href="<%= "#{admin_photos_path}?td=#{@photo.type_id}&type=#{@photo.photo_type}" %>" title="列表" class="btn btn-default">
      <i class="icon-list icon-only"></i></a>
  </small>
</h1>

<% if notice %>
    <div class="alert alert-success"><%= notice %>
      <button class="close" data-dismiss="alert">
        <i class="icon-remove"></i>
      </button>
    </div>
<% end %>
<div class="panel panel-info">
  <div class="panel-heading">
    <%= t('activerecord.models.demeanor') %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <h4>图片:</h4>

      <%= image_tag(@photo.image_url(:large)) %>
    </li>
    <li class="list-group-item">
      <h4> 显示:</h4>

      <%= @photo.status ? '是' : '否' %>
    </li>
  </ul>
</div>