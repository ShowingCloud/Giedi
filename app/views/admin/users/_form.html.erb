<div class="panel panel-info">
  <div class="panel-heading"><%= t('activerecord.models.user') %></div>
  <div class="panel-body">
    <%= simple_form_for([:admin, @user]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <%= f.input :nickname %>
          <%= f.input :mobile %>
          <%= f.input :email %>
          <%= f.input :fullname %>
          <div class="form-group">
            <label for="user[gender]">性别</label>

            <div class="input-group">
              <label class="gender-label"><input type="radio" name="user[gender]" value="1" <%= 'checked' if @user.gender.to_i == 1 %>/>男</label>&nbsp;
              <label class="gender-label"><input type="radio" name="user[gender]" value="2" <%= 'checked' if @user.gender.to_i == 2 %>/>女</label>
            </div>
          </div>
          <div class="form-group date optional user_birthday">
            <label class="control-label date optional" for="user_birthday">生日</label>
            <input id="user_birthday" class="form-control" name="user[birthday]" data-control="dateForm" value="<%= @user.birthday %>" data-date-format="yyyy-mm-dd"/>
          </div>
          <%= f.input :student_code %>
          <div class="form-group">
            <label class="control-label" for="user_grade">年级</label>
            <select name="user[grade]" id="user_grade" class="string optional form-control">
              <option value="0">请选择年级</option>
              <% ['一', '二', '三', '四', '五', '六(初中预备)', '七(初中一)', '八(初中二)', '九(初中三)', '高一', '高二', '高三'].each_with_index do |grade, index| %>
                  <option value="<%= index+1 %>" <%= 'selected="selected"' if @user.grade.to_i == index+1 %>><%= grade %>
                    年级
                  </option>
              <% end %>
            </select>
          </div>
          <%= f.input :bj %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
    <% end %>

  </div>
</div>




