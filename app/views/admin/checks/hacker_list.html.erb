<h1 class="page-header">
  创客列表
  <small class="pull-right">
    <a href="/admin/checks/hackers" class="btn btn-default" title="待审核家庭创客列表">
      待审核家庭创客列表</a>
    <!--<a href="/admin/checks/referees" class="btn btn-default" title="待审核裁判">-->
    <!--待审核裁判</a>-->
  </small>
</h1>
<% if @hackers.present? %>
    <table class="table table-bordered table-hover table-striped">
      <thead>
      <tr>
        <th>姓名</th>
        <th>性别</th>
        <th>区县</th>
        <th>学校</th>
        <th>描述</th>
        <th>图片</th>
      </tr>
      </thead>

      <tbody>
      <% @hackers_array.each do |th| %>
          <tr>
            <td><%= th[:username] %></td>
            <td><%= th[:gender]==1 ? '男' : '女' %></td>
            <td><%= th[:district] %></td>
            <td><%= th[:school] %></td>
            <td title="<%= th[:desc] %>"><%= th[:desc][0..9] %></td>
            <td class="ace-thumbnails">
              <a href="<%= th[:cover] %>" title="<%= th[:username] %>" data-rel="colorbox">
                图片
              </a>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <nav>
      <%= paginate @hackers %>
    </nav>
<% else %>
    <div class="alert alert-success">
      暂无家庭创客身份的用户
    </div>
<% end %>
