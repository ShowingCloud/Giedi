<h1 class="page-header">
  教师列表
  <small class="pull-right">
    <a href="/admin/checks/teachers" class="btn btn-default" title="待审核教师">
      待审核教师</a>
  </small>
</h1>
<table class="table table-bordered table-hover table-striped">
  <thead>
  <tr>
    <th>姓名</th>
    <th>性别</th>
    <th>级别</th>
    <th>教师证</th>
    <th>手机</th>
    <th>学校</th>
  </tr>
  </thead>
  <tbody>
  <% @teacher_array.each do |th| %>
      <tr>
        <td><%= th[:username] %></td>
        <td>
          <% case th[:gender] %>
          <% when 1 then %>
              男
          <% when 2 then %>
              女
          <% else %>
          <% end %></td>
        <td>
          <% case th[:role] %>
          <% when 1 then %>
              市级老师
          <% when 2 then %>
              区县(唯一)
          <% when 3 then %>
              学校(唯一)
          <% when 4 then %>
              区县
          <% when 5 then %>
              学校
          <% else %>
          <% end %>
        </td>
        <td class="ace-thumbnails">
          <a href="<%= th[:certificate] %>" title="<%= th[:username] %>" data-rel="colorbox">
            教师证
          </a>
        </td>
        <td><%= th[:mobile] %></td>
        <td><%= th[:school] %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<nav>
  <%= paginate @teachers %>
</nav>