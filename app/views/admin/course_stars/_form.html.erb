<%= simple_form_for(@course_star, url: '/admin/course_stars', method: :post, remote: true) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :name, maxlength: 15 %>
      </div>
      <div class="col-xs-6">
        <div class="form-inputs">
          <%= f.input :stars, placeholder: '1-5之间的整数', collection: 1..5 %>
          <%= f.hidden_field :course_id, value: params[:id].present? ? params[:id] : @course_star.course_id %>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with' => '提交' %>
    </div>
<% end %>

