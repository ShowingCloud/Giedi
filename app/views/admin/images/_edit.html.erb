<%= simple_form_for(@news, url: "/admin/news/#{params[:news_id]}/images/update_image?index=#{params[:id]}", method: :post) do |f| %>
    <%= f.error_notification %>
    <div class="row">

      <div class="col-xs-6">
        <%= image_tag(@news.images[params[:id].to_i].url(:middle)) %>
        <br><br>
        <div class="form-inputs">
          <%= f.file_field :sss %>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary', value: '提交', 'data-disable-with' => '提交' %>
    </div>
<% end %>

