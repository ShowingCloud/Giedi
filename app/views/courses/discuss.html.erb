<div class="container">

  <%= @group.name %>
  <%= image_tag(@group.teacher.avatar_url(:middle)) %>
  <hr>
  <a href="<%= "/courses/community/#{@group.id}" %>" class="btn btn-lg">作品展示</a>
  <a href="<%= "/courses/discuss/#{@group.id}" %>" class="btn btn-lg">讨论区</a>
  <br>
  <%= simple_form_for(GroupCommunity.new, url: '/courses/discuss_post', method: :post) do |f| %>
      <textarea id="group_community_content" class="text form-control" style="width:500px;height:180px" name="group_community[content]"></textarea>
      <%= f.input :anonymous, label: '匿名提交' %>
      <%= f.hidden_field :group_id, value: @group.id %>
      <div class="form-actions">
        <%= f.submit class: 'btn btn-primary', value: '提交' %>
      </div>
  <% end %>
  <hr>
  <% if @comments %>
      <% @comments.each do |c| %>
          <%= image_tag('avatar/thumb.png') %>
          <%= c.user.fullname %>
          <%= c.content %>
          <%= c.created_at.strftime('%Y-%m-%d %H:%M') %>

          <%= likeable_tag(c) %>
          <button type="button" class="btn btn-warning btn-lg">

            评论
          </button>
          <div>
            <% if c.child_group_communities.present? %>
                <div style="margin: 20px">

                  <% c.child_group_communities.each do |child_c| %>
                      <%= image_tag('avatar/thumb.png') %>
                      <%= child_c.user.fullname %>
                      <%= child_c.content %>
                      <%= child_c.created_at.strftime('%Y-%m-%d %H:%M') %>
                  <% end %>
                </div>


            <% end %>
          </div>
          <br>
      <% end %>
  <% end %>
</div>