<div class="container">
  <div class="row course-head center-block text-center">
    <div class="col-md-6">
      <h2><%= @course.name %></h2>
      <div class="stars-wrapper text-left">
        <% if @stars.present? %>
          <ul>
            <% @stars.each do |s| %>
              <li class="stars">
                <%= "#{s.name}:" %>
                <span>
                  <% s.stars.times do %>
                    &starf;
                  <% end %>
                </span>
              </li>
            <% end %>
          </ul>
          <h2><a href="<%= "/courses/community/#{@course.group_id}" %>">课程圈子</a></h2>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <p><%= image_tag(@course.cover_url(:middle),alt:"课程封面") %></p>
    </div>
  </div>

  <div class="lesson-list">
    <ul>
      <% if @lessons.present? %>
          <% @lessons.each do |l| %>

            <li>
                <div class="btn btn-lesson-item"><span class="gear">&#9881;</span><%= l.name %></div>
                <% if l.content.present? %>
                  <div>
                      <a class="btn btn-info" href="">课件</a>
                  </div>
                <% end %>
                <% if l.lesson_tests.present? %>
                  <div>
                      <a class="btn btn-info" href="/courses/lesson_test/<%= l.id %>">测试</a>
                  </div>
                <% end %>
              </li>
          <% end %>
      <% end %>
    </ul>

  </div>
  <div class="clearfix"></div>
  <div class="course-info">
    <%= @course.course_info.html_safe %>
  </div>
</div>
