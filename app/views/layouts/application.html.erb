<!DOCTYPE html>
<html>
  <head>
    <%= render_page_title %>
    <%= csrf_meta_tags %>
    <link rel="icon" href="<%= asset_path('favicon.png') %>"/>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="user-info pull-right">
      <% if current_user %>
          <div class="login-info">
            <div class="dropdown">
              <button class="btn-robodou" data-toggle="dropdown">
                <%= current_user.nickname %> <span class="caret"></span>
              </button>
              <ul class="dropdown-menu dropdown-menu-robodou">
                <li><%= link_to '退出登录', sign_out_path, method: :delete, data: {confirm: '确认退出登录吗?'} %></li>
              </ul>
            </div>
          </div>
      <% else %>
          <div class="un-login">
            <%= link_to '登录', sign_in_path, class: 'btn-robodou btn-login-link' %>
            <%= link_to '注册', sign_in_path, class: 'btn-robodou btn-register-link' %>
          </div>
      <% end %>
    <%= yield %>
  </body>
</html>
