<div class="container">
    <h3>修改邮箱</h3>

    <div class="form">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for :user,:url => 'add_email' do |f| %>
            <%= f.label :new_email, '邮箱' %>
            <%= f.email_field :new_email , class: 'form-control'%>

            <%= rucaptcha_input_tag(class: 'form-control', placeholder: '输入验证码') %>
            <%= rucaptcha_image_tag(class: 'captcha', alt: '验证码') %>

            <%= f.submit "提交", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
