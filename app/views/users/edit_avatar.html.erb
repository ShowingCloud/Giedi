<h3>跟换头像</h3>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <div class="field">
          <%= f.label :avatar do %>
              <%= f.file_field :avatar %>
              <%= f.hidden_field :avatar_cache %>
          <% end %>
        </div>

        <%= f.submit "提交", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
