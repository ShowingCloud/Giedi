<div class="uc-avatar">
  <a href="#avatar-modal" data-toggle="modal">
    <div class="avatar-box img-circle">
      <img id="myavatar" src="<%= Devise.cas_base_url %>/profile/get_avatar" class="img-circle" alt=""/>
    </div>
  </a>
  <div class="username-box">
    <%= current_user.nickname %>
  </div>
</div>
<div id="textarea">

  <div id="avatar-modal" class="modal opus-form" tabindex="-1">
    <div class="modal-dialog text-center">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <div class="img-wrapper">
            <img src="<%= image_path('upload.png') %>" alt=""/>
          </div>

          <h4 class="blue bigger">上传头像</h4>
        </div>

        <form id="avatar-form" enctype="multipart/form-data" action="<%= iframe_src('/profile.xml') %>" accept-charset="UTF-8" method="post">
          <input name="utf8" value="✓" type="hidden"><input name="_method" value="patch" type="hidden">

          <div class="modal-body overflow-visible">
            <div class="row">
              <div class="col-xs-12">
                <div class="btn upload-path">请选择文件</div>
                <input name="user[avatar]" id="user_avatar" type="file">
                <label class="btn btn-rect active" for="user_avatar">浏览</label>
              </div>
              <img class="preview" src="#" alt="预览"/>
            </div>
          </div>

          <div class="modal-footer">
            <input id="avatar-submit" name="avatar-submit" value="上传我的头像" class="btn btn-default btn btn-rect" type="submit">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>