<div class="container">
  <h1>手机注册</h1>

  <div class="form">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@phone_verification) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :phone, '手机号' %>
        <%= f.text_field :phone , class: 'form-control'%>

        <%= rucaptcha_input_tag(class: 'form-control', placeholder: '输入图形验证码') %>
        <%= rucaptcha_image_tag(class: 'captcha', alt: '验证码') %>

        <%= f.submit "获取手机验证码", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
